@{
    var db = Database.Open("Datebase");


    var data = db.QuerySingle("SELECT * FROM Settings WHERE Id = @0", 1);
  
}

<!DOCTYPE html>

<html lang="@data.SiteLang">
<head>
    <meta charset="utf-8" />
    <title>@Page.Title @data.PageNameSep @data.SiteName</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <link href="~/Components/ui/css/Global.css" rel="stylesheet" />
    @if (data.SiteMeta == "on")
    {

        <meta name="description" content="@Page.Description"/>

        <meta name="keywords" content="@Page.Keywords, @data.SiteKeywords"/>

        <meta name="author" content="@Page.Author"/>
        }

    @RenderSection("head_code", false)
</head>
<body>
    @RenderBody()

    @if (data.jQuery == "on")
    {<script src="//code.jquery.com/jquery-latest.min.js"></script>}
    @if (data.JSLib == "on")
    {<script src="~/Components/ui/js/All.js"></script> }

    @Html.Raw(data.SiteStatCode)
    @if (data.SiteStat == "on")
    {

        <script>new Image().src = "//counter.yadro.ru/hit?r" + escape(document.referrer) + ((typeof (screen) == "undefined") ? "" : ";s" + screen.width + "*" + screen.height + "*" + (screen.colorDepth ? screen.colorDepth : screen.pixelDepth)) + ";u" + escape(document.URL) + ";h" + escape(document.title.substring(0, 80)) + ";" + Math.random();</script>
        }
</body>
</html>
<!-- 2008-@DateTime.Now.Year World Fly -->