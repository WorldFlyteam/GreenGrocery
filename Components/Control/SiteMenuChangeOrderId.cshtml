@{
    
    var tableName = Request["tn"];
    var changeValue = Request["cv"];
    var id = Request["id"];
       
    
    var db = Database.Open("Datebase");
    var sqlUpdate = "";
    
    //update menu order
    if (tableName.ToString().ToLower() == "rc_simplemenu"){
        sqlUpdate = "Update SiteMenu set OrderId=OrderId +@0 where Id=@1";
        
    }

    


    try
    {
        db.Execute(sqlUpdate, changeValue, id);

        Response.Redirect(Request.UrlReferrer.ToString());
        
        
    }
    catch (Exception)
    {
        
        throw;
    }
}