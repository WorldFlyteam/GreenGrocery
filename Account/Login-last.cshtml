@{
    //super simple login page
    //just to provide basic protection for control panel
    var IsValid = true;
    if (IsPost){

        var name = Request["Name"];
        if(name.IsEmpty()){
            IsValid = false;
        }

        var password = Request["Password"];
        if(password.IsEmpty()){
            IsValid = false;
        }
        
        if(IsValid){ 
            var db = Database.Open("Datebase");
            try{
            var data = db.QueryValue("SELECT * FROM Users WHERE Email = @0, Password = @1", name, password);
            //var data = db.QuerySingle("SELECT * FROM Users WHERE Password = @0", password);
            
            if (data!=null)
            {
                FormsAuthentication.RedirectFromLoginPage(name, false);
        
            }
            }catch{
                Response.Write("Error");
            }
        }
        
    }
    
    
    }
